<% layout('layouts/boilerplate') %>
    <h2>All Playgrounds</h2>
    <div>
        <a href = "/playgrounds/new">Add a Playground</a>
    </div>

    <% for(let playground of playgrounds) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= playground.image %> " alt="" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= playground.title %></h5>
                        <p class="card-text"><%= playground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"
                                ><%= playground.location %>
                            </small>
                        </p>
                        <a
                            class="btn btn-primary"
                            href="/playgrounds/<%= playground._id %> "
                            >View  <%= playground.title %></a
                        >
                    </div>
                </div>
            </div>
        </div>
        
    <%}%>
