<% layout('layouts/boilerplate') %>
    <div class="container">
        <h1>All Playgrounds</h1>

    <% for(let playground of playgrounds) {%>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <a href="/playgrounds/<%= playground._id %> ">
                        <img class="img-fluid rounded " src="<%= playground.images[0].url %> "  alt="" />
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= playground.title %></h5>
                        <p class="card-text"><%= playground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"
                                ><%= playground.location %>
                            </small>
                        </p>
                        <a
                            class="btn btn-primary"
                            href="/playgrounds/<%= playground._id %> "
                            >View  <%= playground.title %></a
                        >
                    </div>
                </div>
            </div>
        </div>
        
    <%}%>
</div>
