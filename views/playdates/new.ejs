<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Arrange a playdate</h1>
    <div class="col-6 offset-3">
        <% if(currentUser) { %> 
            <form
            action="/playgrounds/<%= playground._id%>/playdates "
            method="POST"
            class="mb-4 validated-form"
            novalidate
            >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[title]"
                    id="title"
                    placeholder="Enter title"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="contact">Contact </label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[contact]"
                    id="contact"
                    value=<%= currentUser.email %>
                ></input>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="totalNum">Total Number</label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[totalNum]"
                    id="totalNum"
                    placeholder="Number of Families attended"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Date </label>
                <input
                    class="form-control"
                    type="datetime-local"
                    name="date"
                    id="date"
                    min="2022-04-01"
                    required
                ></input>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="time">Time </label>
                <input
                    class="form-control"
                    type="time"
                    name="playdate[time]"
                    id="time"
                    required
                ></input>
            </div> -->
            
            <div class="mb-3">
                <label class="form-label" for="durition">Durition </label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[durition]"
                    id="durition"
                    placeholder="Enter estimated time (hrs)"
                    required
                ></input>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="remarks">Remarks </label>
                <textarea
                    class="form-control"
                    type="text"
                    name="playdate[remarks]"
                    id="remarks"
                ></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
            </form>
            <div><a href="/playgrounds/<%= playground._id%>">Cancel</a></div>
        <% }%> 
    </div>
</div>