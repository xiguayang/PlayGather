<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Modify the Playdate</h1>
    <div class="col-6 offset-3">
        <form
            action="/playgrounds/<%= id %>/playdates/<%= playdate._id%>?_method=PUT "
            method="POST"
            novalidate
            class="validated-form"

        >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[title]"
                    value="<%= playdate.title%>"
                    id="title"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="totalNum">Total Number</label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[totalNum]"
                    id="totalNum"
                    value="<%= playdate.totalNum%>"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Date </label>
                <input
                    class="form-control"
                    type="datetime-local"
                    name="playdate[date]"
                    id="date"
                    value=<%= datevalue %>
                    required
                ></input>
            </div>

            <div class="mb-3">
                <label class="form-label" for="durition">Durition </label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[durition]"
                    id="durition"
                    value="<%= playdate.durition%>"
                    required
                ></input>
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="remarks">Remarks </label>
                <textarea
                    class="form-control"
                    type="text"
                    name="playdate[remarks]"
                    id="remarks"
                ><%= playdate.remarks%></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="contact">Contact </label>
                <input
                    class="form-control"
                    type="text"
                    name="playdate[contact]"
                    id="contact"
                    value="<%= playdate.contact%>"
                ></input>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">
            <!-- <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="isActive">
                <label class="form-check-label" for="isActive">Re Active the playdate?</label>
            </div> -->
            <% if(!playdate.active){%> 
                ReActive the Playdate
            <% }else{ %> 
                Update the Playdate
            <% } %> 
            </button>
            </div>

        </form>
        <!-- <div>
            <a href="/">Back to Playground</a>
        </div> -->
    </div>
</div>